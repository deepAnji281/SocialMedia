<link rel="stylesheet" href="/Css/home.css">
<h1 class="header1">codial/homePage</h1>
<section id="new-post">
    <%if(locals.user){%>
        <form action="/post/create" id="new-feed" method="post">
            <textarea name="content" id="new-content" cols="30" rows="3" placeholder="Type Here...."></textarea>
             <input type="submit" value="Post">
        </form>
    <%}%>
</section>
<ul>
    <%for(post of posts){%>

       <div class="details-post">
        <li><%=post.content%></li>
        <li> by <%=post.user.name%></li>
        <br>
        <div class="post-comment">
            <% if(locals.user){%>
                <form action="/comment/create" method="post">
                    <input type="text" placeholder="add a comment here ...." required>
                    <input type="hidden" name="post" value="<%=post._id%>">
                    <input type="submit" value="add-comment">
                </form>
    
                <%}%>
           </div>
           <div class="post-comment-list">
            <div id="<%=post._id%>">
            <% for(comment of post.comments){%>
                <br>
                <br>
                <li><%=comment.content%></li>
                <li><%=comment.user.name%></li>
                
                
                <%}%>

            </div>
           </div>
       </div>

     
    <%}%>
    
</ul>